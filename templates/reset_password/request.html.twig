{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="text-white">Réinitialiser le mot de passe</h1>

    <div class="card my-4">
        <div class="my-4">
            <small>
                Entrez votre adresse mail, et nous vous enverrons un lien pour réinitialiser votre mot de passe.
            </small>
        </div>

        {{ form_start(requestForm) }}
            {{ form_row(requestForm.mail) }}


            <button class="btn btn-primary my-4">Envoyer le mail de réinitialisation</button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}

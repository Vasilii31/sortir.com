{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs - {{ parent() }}{% endblock %}

{% block body %}
<div class="admin-page">
<div class="row justify-content-center">
    <div class="col-md-11 col-lg-10">
        <div class="card shadow-sm">
            <div class="card-body p-3">
                <header class="text-center mb-3">
                    <h1 class="h5 mb-2">Gestion des utilisateurs</h1>
                    <div class="text-muted small">{{ users|length }} utilisateur(s) enregistré(s)</div>
                </header>

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">{{ message }}</div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">{{ message }}</div>
                {% endfor %}

                <div class="table-responsive">
                    <table class="table table-sm table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Photo</th>
                                <th>Nom</th>
                                <th>Prénom</th>
                                <th>Pseudo</th>
                                <th>Email</th>
                                <th>Téléphone</th>
                                <th>Site</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                <tr {% if not user.actif %}class="table-secondary"{% endif %}>
                                    <td>
                                        {% if user.photoProfil %}
                                            <img src="{{ asset('uploads/profiles/' ~ user.photoProfil) }}" alt="Photo de {{ user.pseudo }}" class="rounded-circle" style="width: 32px; height: 32px; object-fit: cover;">
                                        {% else %}
                                            <div class="avatar-initials d-flex align-items-center justify-content-center text-white fw-bold rounded-circle" style="width: 32px; height: 32px; background: linear-gradient(45deg, #007bff, #0056b3); font-size: 0.75rem;">
                                                {{ user.prenom|first|upper }}{{ user.nom|first|upper }}
                                            </div>
                                        {% endif %}
                                    </td>
                                    <td class="fw-medium">{{ user.nom }}</td>
                                    <td>{{ user.prenom }}</td>
                                    <td>
                                        <code class="text-primary">{{ user.pseudo }}</code>
                                        {% if user.id == currentUser.id %}
                                            <small class="text-muted">(vous)</small>
                                        {% endif %}
                                    </td>
                                    <td class="small">{{ user.mail }}</td>
                                    <td class="small">{{ user.telephone|default('—') }}</td>
                                    <td class="small">{{ user.site.nomSite }}</td>
                                    <td>
                                        {% if user.administrateur %}
                                            <span class="badge bg-danger small">Admin</span>
                                        {% else %}
                                            <span class="badge bg-secondary small">User</span>
                                        {% endif %}
                                        {% if not user.actif %}
                                            <br><span class="badge bg-warning small">Inactif</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if user.id != currentUser.id %}
                                            <div class="btn-group btn-group-sm">
                                                <!-- Toggle Admin -->
                                                <form method="post" action="{{ path('admin_toggle_admin', {id: user.id}) }}" style="display: inline;">
                                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('toggle_admin_' ~ user.id) }}">
                                                    <button type="submit" class="btn btn-outline-{% if user.administrateur %}warning{% else %}success{% endif %} btn-sm me-2"
                                                            onclick="return confirm('{% if user.administrateur %}Retirer les droits administrateur à{% else %}Promouvoir comme administrateur{% endif %} {{ user.pseudo }} ?')">
                                                        {% if user.administrateur %}
                                                            <span class="material-icons-outlined">
                                                                add_moderator
                                                            </span>
                                                        {% else %}
                                                            <span class="material-icons-outlined">
                                                                remove_moderator
                                                            </span>
                                                        {% endif %}
                                                    </button>
                                                </form>
                                                <!-- Delete User -->
                                                <form method="post" action="{{ path('admin_delete_user', {id: user.id}) }}" style="display: inline;">
                                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('delete_user_' ~ user.id) }}">
                                                    <button type="submit" class="btn btn-outline-danger btn-sm"
                                                            onclick="return confirm('Êtes-vous sûr de vouloir supprimer {{ user.pseudo }} ? Cette action est irréversible.')">
                                                        <span class="material-icons-outlined">
                                                            person_off
                                                        </span>
                                                    </button>
                                                </form>
                                            </div>
                                        {% else %}
                                            <small class="text-muted">—</small>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="9" class="text-center text-muted">Aucun utilisateur trouvé</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <hr class="my-3">
                <div class="text-center">
                    <a href="{{ path('app_sortie_index') }}" class="btn btn-outline-secondary btn-sm">← Retour à l'accueil</a>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
    <style>
        .avatar-initials {
            font-size: 0.75rem !important;
        }
        .table th {
            border-top: none;
            font-weight: 600;
            font-size: 0.85rem;
        }
        .table td {
            vertical-align: middle;
            font-size: 0.9rem;
        }
        .btn-group-sm .btn {
            padding: 0.2rem 0.4rem;
            font-size: 0.75rem;
        }
    </style>
{% endblock %}